{
  "name": "@hwittenborn/rclone",
  "version": "0.1.2",
  "description": "TypeScript client for rclone Remote Control API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwittenborn/rclone-ts.git"
  },
  "keywords": [
    "rclone",
    "typescript",
    "remote-control",
    "rc"
  ],
  "author": "Hunter Wittenborn",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/hwittenborn/rclone-ts/issues"
  },
  "homepage": "https://github.com/hwittenborn/rclone-ts#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "cross-fetch": "^4.1.0",
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
